#, no-wrap
msgid "<a id=\"sharing\"></a>\n"
msgstr ""

#. type: Title ###
#, no-wrap
msgid "Sharing email"
msgstr ""

#. type: Plain text
#, no-wrap
msgid ""
"<pre>\n"
"Subject: sharing\n"
msgstr ""

#. type: Plain text
msgid "We asked someone else from your group to send you a copy of your share."
msgstr ""

#. type: Plain text
msgid "Please tell us once you receive it."
msgstr ""

